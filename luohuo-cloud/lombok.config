# Lombok Configuration
config.stopBubbling = true
lombok.addLombokGeneratedAnnotation = true
lombok.anyConstructor.addConstructorProperties = true

# Ensure @Data generates all necessary methods
lombok.data.flagUsage = ALLOW
lombok.builder.flagUsage = ALLOW
lombok.log.flagUsage = ALLOW

# Suppress @EqualsAndHashCode warnings for classes extending other classes
# Default to not calling super for equals/hashCode (explicit choice)
lombok.equalsAndHashCode.callSuper = CALL