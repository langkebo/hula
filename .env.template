# HuLa-Server 环境变量配置模板
# 使用方法：复制为 .env 文件并修改相应值
# 部署时：docker compose --env-file .env up -d

# ==================== 数据库配置 ====================
# MySQL配置
MYSQL_HOST=${MYSQL_HOST:-localhost}
MYSQL_PORT=${MYSQL_PORT:-3306}
MYSQL_DATABASE=${MYSQL_DATABASE:-luohuo_dev}

# 数据库专用用户密码（生产环境必须修改）
IM_PASSWORD=${IM_PASSWORD:-Im@2025#Secure}
BASE_PASSWORD=${BASE_PASSWORD:-Base@2025#Secure}
OAUTH_PASSWORD=${OAUTH_PASSWORD:-Oauth@2025#Secure}
SYSTEM_PASSWORD=${SYSTEM_PASSWORD:-System@2025#Secure}
NACOS_PASSWORD=${NACOS_PASSWORD:-nacos@2025#Secure}
READONLY_PASSWORD=${READONLY_PASSWORD:-Read@2025#Secure}
BACKUP_PASSWORD=${BACKUP_PASSWORD:-Backup@2025#Secure}

# Root用户密码（仅在初始化时使用）
MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD:-Root@2025#Secure}

# 服务数据库配置（每个服务使用独立用户）
IM_DB_HOST=${IM_DB_HOST:-${MYSQL_HOST}}
IM_DB_PORT=${IM_DB_PORT:-${MYSQL_PORT}}
IM_DB_NAME=${IM_DB_NAME:-luohuo_im}
IM_DB_USERNAME=${IM_DB_USERNAME:-luohuo_im}
IM_DB_PASSWORD=${IM_DB_USERNAME:-${IM_PASSWORD}}

BASE_DB_HOST=${BASE_DB_HOST:-${MYSQL_HOST}}
BASE_DB_PORT=${BASE_DB_PORT:-${MYSQL_PORT}}
BASE_DB_NAME=${BASE_DB_NAME:-luohuo_base}
BASE_DB_USERNAME=${BASE_DB_USERNAME:-luohuo_base}
BASE_DB_PASSWORD=${BASE_DB_USERNAME:-${BASE_PASSWORD}}

OAUTH_DB_HOST=${OAUTH_DB_HOST:-${MYSQL_HOST}}
OAUTH_DB_PORT=${OAUTH_DB_PORT:-${MYSQL_PORT}}
OAUTH_DB_NAME=${OAUTH_DB_NAME:-luohuo_oauth}
OAUTH_DB_USERNAME=${OAUTH_DB_USERNAME:-luohuo_oauth}
OAUTH_DB_PASSWORD=${OAUTH_DB_USERNAME:-${OAUTH_PASSWORD}}

SYSTEM_DB_HOST=${SYSTEM_DB_HOST:-${MYSQL_HOST}}
SYSTEM_DB_PORT=${SYSTEM_DB_PORT:-${MYSQL_PORT}}
SYSTEM_DB_NAME=${SYSTEM_DB_NAME:-luohuo_system}
SYSTEM_DB_USERNAME=${SYSTEM_DB_USERNAME:-luohuo_system}
SYSTEM_DB_PASSWORD=${SYSTEM_DB_USERNAME:-${SYSTEM_PASSWORD}}

NACOS_DB_HOST=${NACOS_DB_HOST:-${MYSQL_HOST}}
NACOS_DB_PORT=${NACOS_DB_PORT:-${MYSQL_PORT}}
NACOS_DB_NAME=${NACOS_DB_NAME:-nacos}
NACOS_DB_USERNAME=${NACOS_DB_USERNAME:-nacos}
NACOS_DB_PASSWORD=${NACOS_DB_USERNAME:-${NACOS_PASSWORD}}

# Oracle配置（如需要）
ORACLE_HOST=${ORACLE_HOST:-172.26.3.67}
ORACLE_PORT=${ORACLE_PORT:-1521}
ORACLE_DATABASE=${ORACLE_DATABASE:-helowin}
ORACLE_USERNAME=${ORACLE_USERNAME:-luohuo_none}
ORACLE_PASSWORD=${ORACLE_PASSWORD:-luohuo_none}

# SQL Server配置（如需要）
SQLSERVER_HOST=${SQLSERVER_HOST:-172.26.3.67}
SQLSERVER_PORT=${SQLSERVER_PORT:-1433}
SQLSERVER_DATABASE=${SQLSERVER_DATABASE:-luohuo_none}
SQLSERVER_USERNAME=${SQLSERVER_USERNAME:-sa}
SQLSERVER_PASSWORD=${SQLSERVER_PASSWORD:-1234@abcd}

# ==================== Redis配置 ====================
REDIS_HOST=${REDIS_HOST:-localhost}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_PASSWORD=${REDIS_PASSWORD:-luo.123456}
REDIS_DATABASE=${REDIS_DATABASE:-0}

# ==================== Nacos配置 ====================
NACOS_HOST=${NACOS_HOST:-localhost}
NACOS_PORT=${NACOS_PORT:-8848}
NACOS_USERNAME=${NACOS_USERNAME:-nacos}
NACOS_PASSWORD=${NACOS_PASSWORD:-nacos}
NACOS_NAMESPACE=${NACOS_NAMESPACE:-}

# ==================== RocketMQ配置 ====================
ROCKETMQ_NAME_SERVER=${ROCKETMQ_NAME_SERVER:-localhost:9876}
ROCKETMQ_BROKER_NAME=${ROCKETMQ_BROKER_NAME:-broker-a}
ROCKETMQ_BROKER_IP1=${ROCKETMQ_BROKER_IP1:-localhost}

# ==================== MinIO配置 ====================
MINIO_HOST=${MINIO_HOST:-localhost}
MINIO_PORT=${MINIO_PORT:-9000}
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY:-minioadmin}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY:-minioadmin}
MINIO_BUCKET=${MINIO_BUCKET:-hula}

# ==================== 应用服务端口配置 ====================
# Gateway服务端口
GATEWAY_PORT=${GATEWAY_PORT:-18760}

# OAuth服务端口
OAUTH_PORT=${OAUTH_PORT:-18761}

# IM服务端口
IM_PORT=${IM_PORT:-18762}

# Base服务端口
BASE_PORT=${BASE_PORT:-18763}

# WebSocket服务端口
WS_PORT=${WS_PORT:-9501}

# System服务端口
SYSTEM_PORT=${SYSTEM_PORT:-18764}

# ==================== SSL/TLS配置 ====================
# 数据库SSL配置
MYSQL_SSL_ENABLED=${MYSQL_SSL_ENABLED:-true}
MYSQL_SSL_REQUIRE=${MYSQL_SSL_REQUIRE:-false}
MYSQL_SSL_VERIFY=${MYSQL_SSL_VERIFY:-false}

# ==================== JVM配置 ====================
# JVM内存配置（MB）
JVM_XMS=${JVM_XMS:-512}
JVM_XMX=${JVM_XMX:-1024}
JVM_XMN=${JVM_XMN:-256}

# ==================== 日志配置 ====================
# 日志级别
LOG_LEVEL=${LOG_LEVEL:-INFO}
# 日志路径
LOG_PATH=${LOG_PATH:-./logs}
# 是否开启SQL日志
SQL_LOG_ENABLED=${SQL_LOG_ENABLED:-true}
# 慢SQL阈值（毫秒）
SLOW_SQL_MILLIS=${SLOW_SQL_MILLIS:-1000}

# ==================== 安全配置 ====================
# JWT密钥（生产环境请修改）
JWT_SECRET=${JWT_SECRET:-hulaServerSecretKey2025}
# JWT过期时间（小时）
JWT_EXPIRE_HOURS=${JWT_EXPIRE_HOURS:-24}

# ==================== 文件存储配置 ====================
# 文件上传路径
UPLOAD_PATH=${UPLOAD_PATH:-./uploads}
# 文件大小限制（MB）
MAX_FILE_SIZE=${MAX_FILE_SIZE:-100}

# ==================== 第三方服务配置 ====================
# 邮件服务配置
MAIL_HOST=${MAIL_HOST:-smtp.example.com}
MAIL_PORT=${MAIL_PORT:-587}
MAIL_USERNAME=${MAIL_USERNAME:-noreply@example.com}
MAIL_PASSWORD=${MAIL_PASSWORD:-mailpassword}

# 短信服务配置
SMS_ACCESS_KEY=${SMS_ACCESS_KEY:-your_access_key}
SMS_SECRET_KEY=${SMS_SECRET_KEY:-your_secret_key}